# AIGC模型配置
# 请复制此文件为 .env 并填入实际的API密钥

# === GPT配置 ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# === 讯飞星火配置 ===
SPARK_APP_ID=your_spark_app_id_here
SPARK_API_KEY=your_spark_api_key_here
SPARK_API_SECRET=your_spark_api_secret_here
SPARK_DOMAIN=generalv3

# === 文心一言配置 ===
QIANFAN_ACCESS_KEY=your_qianfan_access_key_here
QIANFAN_SECRET_KEY=your_qianfan_secret_key_here
QIANFAN_MODEL=ERNIE-Bot-4

# === 智谱AI配置 ===
# API密钥获取地址：https://open.bigmodel.cn/usercenter/apikeys
# 格式：id.secret (例如：1234.abcdefg1234567890)
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_MODEL=glm-4-flash  # 可选: glm-4-plus, glm-4-air, glm-4-flash, glm-3-turbo

# === 默认使用的模型 ===
# 可选: gpt, spark, qianfan, zhipu
DEFAULT_AIGC_MODEL=gpt

# === 数据源配置 ===
# 股票数据API（如东方财富、同花顺等）
STOCK_API_BASE_URL=your_stock_api_url
STOCK_API_KEY=your_stock_api_key

# === 监控配置 ===
MONITOR_INTERVAL_SECONDS=60
TRADING_STYLE=short  # short/medium/long (短线/波段/长线)

# === 日志配置 ===
LOG_LEVEL=INFO
LOG_FILE=logs/monitor.log
